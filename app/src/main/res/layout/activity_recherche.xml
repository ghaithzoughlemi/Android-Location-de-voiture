<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d1d1d1"
    tools:context="com.example.ghaith.locationvoiture.Recherche">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:src="@drawable/vechicule" />
        <AutoCompleteTextView
            android:id="@+id/actv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Ville"
            android:textSize="25dp"
            android:textColorHint="#162115"
            android:textStyle="italic"
           />

        <AutoCompleteTextView
            android:id="@+id/actv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Choisir l'Agence"
            android:textSize="25dp"
            android:textColorHint="#162115"
            android:textStyle="italic"
            android:enabled="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choisir Véhicule"
            android:textSize="20dp"
            android:textColor="#414641"

            android:textStyle="italic"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/spinner_Rech"/>


        <Button
            android:id="@+id/bt_reserve"
            android:background="@color/colorTextHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Réservé"
            android:textAllCaps="false"
            android:textSize="30dp" />


    </LinearLayout>

</ScrollView>
